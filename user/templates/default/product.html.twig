{% extends 'base.html.twig' %}

{% block title %}WebFullStack - API symfony{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }



    .container-linkreturn > a {
        text-decoration: none;
        color: black;
        transition: all .5s ease-out;
    }
    .container-linkreturn > a:hover {
        text-decoration: underline;
        transition: all .5s ease-out;
    }
    .container-product {
        display: flex;
        flex-direction: column;
    }
    .container-img {
        height: 300px;
        width: 300px;
        display: flex;
        align-self: center;
    }
    .titleProd {
        font-weight: 600;
    }
    
    .btnAddtoCart {
        padding: 10px;
        border: none;
        outline: none;
        background: green;
        color: white;
        cursor: pointer;
    }
</style>

<div class="example-wrapper">

    <div class="">
        <div class="container-linkreturn">
            <a href="{{ path('app_catalog') }}">Retour au catalogue</a>
        </div>
        <div><h3 style="margin: 0; text-align: center;">Figurine {{ product.id }} : </h3></div>
        <div class="container-product" style="{{ product.quantity == 0 ? 'color: red;' : ''}}">
            <div class="container-img" style="background-image: url('{{ product.image }}')"></div>
            <span class="titleProd">Nom : {{ product.name }}</span>
            <span>Prix : {{ product.price }} €</span>
            <span>Quantité disponible : {{ product.quantity }} {{ product.quantity == 0 ? "/!\\ En réapprovisionnement" : "" }}</span>
        </div>
        <div style="display: flex; justify-content: flex-end;">
            <button class="btnAddtoCart" style="{{ product.quantity == 0 ? 'background: grey;' : '' }}">Ajouter au panier</button>
        </div>
    </div>
</div>
{% endblock %}
